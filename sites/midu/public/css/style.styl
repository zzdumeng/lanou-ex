$content = 1100px
$head = 100px
$primary = #00A0E9;
$secondary = #4A4A4A
$tint = #57B7A5

html
  font 16px MicrosoftYahei, "微软雅黑", sans-serif
ul,ol,li
  margin 0
  padding 0
ol
  list-style-position: inside
a
  color white
  &,  &:visited, &:hover
    text-decoration: none
  &:hover
    color $primary

.content
  max-width $content
  margin auto

.head
  background-color $secondary
  color #fff
  .brand
    display flex
    align-items flex-start
    margin-top 26px
    margin-right: 136px
    a
      line-height 1
      font-size 3rem
    span
      font-size: 1.125rem
  .links
    display flex
    .link
      height 6.25rem
      position relative
      display flex
      flex-direction: column
      justify-content flex-end
      line-height 3rem
      margin 0 1.25rem
      position relative
      &::after
        content ""
        position absolute
        width 1px
        height 1rem
        bottom 0.95rem
        right: -1.25rem
        background-color gray
      &:target
        color $primary
      &:last-child::after
        width 0
      &:target::before, &.active::before
        content ""
        position absolute
        top 0
        left 0
        width 100%
        height 10px
        background-color $primary

.swiper-container
  background-color $tint
  .swiper-wrapper
    height 600px
  .swiper-slide
    overflow hidden
    position relative
  .desc 
    color #fff
    width 450px
    margin-top 120px
    line-height 1
    & div
      margin-bottom: 30px
    .title
      font-size 120px
      text-transform: uppercase
    .author
      font-size: 30px
      text-transform: capitalize
    .detail
      font-size: 14px
      text-transform: uppercase
      line-height 1.6
  .swiper-image 
      position absolute
      top 80px
      right 0
  .swiper-button-prev
    background url('/public/img/prev.png') no-repeat
    width 44px
    height 100px
  .swiper-button-next
    background url('/public/img/next.png') no-repeat
    width 44px
    height 100px
.main
  color #333
  line-height 2
  .container-fluid:nth-child(odd)
    background-color #fff
  .container-fluid:nth-child(even)
    background-color #F6F6F6
  .content
    padding 70px
    display flex
  .item-img 
    border-radius: 10px
    // border solid 1px gray
    width 300px
    height 300px
    flex-shrink: 0 
    background-position: top right
  .item-img1
    background-image url('/public/img/pic1.png')  
  .item-img2
    background-image url('/public/img/pic2.png')  
  .item-img3
    background-image url('/public/img/pic3.png')  
  .texts
    padding 0 2.5rem
  .title  
    display flex
    justify-content space-between
    align-items flex-end
    span
      color #999
  h2
    font-size 3rem
    font-weight normal
  h4
    margin-top 2rem
    font-weight normal
    font-size: 1.125rem
  p, li
    font-size 0.875rem
    color #999999

footer 
  padding 61px 0
  background-color $secondary
  color #999
  font-size: 0.875rem
  a
    color $primary
  .content
    display flex
    justify-content space-between
  .qrcode
    justify-content: center
    margin-top: 40px;
    @media (min-width: 568px)
      justify-content: flex-end

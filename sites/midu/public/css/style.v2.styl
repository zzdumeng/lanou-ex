$content = 1100px
$head = 100px
$primary = #00A0E9;
$secondary = #4A4A4A
$tint = #57B7A5
$bp-sm = 576px
$bp-md = 768px

html
  font 16px/1.6 microsoftyahei, "微软雅黑"
ul,ol,li
  margin 0
  padding 0
  list-style-position: inside
a
  color $primary
a.nav-link
  color white
  &:hover
    color $primary
a.brand
  color #fff
  &:hover
    color $primary
header 
  background-color $secondary
.navbar
  height 100px
  padding 0
.content
  max-width $content
  margin auto
.brand
  display flex
  align-items flex-start
  line-height 1
  span:first-child
    font-size: 3rem
  span:last-child
    padding-top 4px
    font-size: 14px
.navbar-nav
  margin-left 5rem
.nav-item 
  height 100px
  display flex
  align-items flex-end
  padding-bottom 1rem
  color #fff
  position relative
  margin 0 10px 
  &.active::before
    content ""
    position absolute
    top 0
    left 0
    height 10px
    width 100%
    background-color $primary
.nav-item
  .nav-link
    color #fff
    position relative
  
  &:not(:last-child)
    .nav-link::after
      content ""
      height 16px
      width 1px
      background-color gray
      position absolute
      right -10px
      top 13px
.active > .nav-link
  color $primary

  // main

.case
  padding 75px 0
  color #999
  line-height 2
  background-color #fff
  &:nth-child(even)
    background-color #F6F6F6
  .img-wrapper
    width 100%;
    height 200px
    overflow hidden

    @media screen and (min-width: $bp-sm)
    //  ! this is the max size of image from design sheet
      max-width: 526px
    @media screen and (min-width: $bp-md)
      width 300px 
      height 300px
.info
  h1
    font-weight: normal
    color #333
  h4
    color #333
  // footer
footer
  background-color $secondary
  color #999
  padding 3rem 0
  font-size 0.875rem
  hr
    background-color #999
    box-shadow 0 1px 0 black
.contact-section
  display flex
  justify-content center
  align-items center
  @media (min-width: $bp-sm)
    justify-content: flex-start

.qrcode
  display flex
  @media (min-width: $bp-sm)
    justify-content flex-end!important
    padding-top 0
@import 'vars'

footer 
  padding 61px 0
  background-color $secondary
  color #999
  font-size: 0.875rem
  a
    color $primary
  hr
    background-color #666
    box-shadow 0 1px 0 #333
  .content
    display flex
    justify-content space-between
  .qrcode
    justify-content: center
    margin-top: 40px;
    @media (min-width: 568px)
      justify-content: flex-end

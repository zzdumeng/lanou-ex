@import 'vars'
.head
  background-color $secondary
  color #fff
  .brand
    display flex
    align-items flex-start
    margin-top 26px
    margin-right: 136px
    a
      line-height 1
      font-size 3rem
    span
      font-size: 1.125rem
  .links
    display flex
    .link
      height 6.25rem
      position relative
      display flex
      flex-direction: column
      justify-content flex-end
      line-height 3rem
      margin 0 1.25rem
      position relative
      &::after
        content ""
        position absolute
        width 1px
        height 1rem
        bottom 0.95rem
        right: -1.25rem
        background-color gray
      &:target
        color $primary
      &:last-child::after
        width 0
      &:target::before, &.active::before
        content ""
        position absolute
        top 0
        left 0
        width 100%
        height 10px
        background-color $primary
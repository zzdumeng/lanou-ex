@import 'vars'
@import 'header'
@import 'footer'

.jumbotron
  background-color $primary
  height 473px
  overflow hidden
  margin-bottom 0
  padding 0
  .content
    color #fff
    display flex
    height 100%
    justify-content space-between
    img
      align-self flex-end
    div 
      padding-top 73px
      p
        font-size 18px
        width 610px
      button
        margin-top 48px
        height 90px
        line-height 90px
        padding 0 2rem
        font-size 30px
        background-color #fff
        border-radius 10px
.ribbon
  position relative
  .content 
    position relative
.dots-container
  padding-top 57px
.dots
  position absolute
  margin-top 57px
  width  977px
  left 62px
  height 123px
  display flex
  justify-content space-between
  align-items center
  .dot
    border-radius: 50%
    width 14px
    height 14px
    border solid 1px #999
    position relative
    &::after, &::before
      content ''
      position absolute
      height 1px
      background-color #999
      width 77px
    &::before
      top 6px
      left -77px
    &::after
      top 6px
      right -77px
    &:first-child, &:last-child
      width 0
      height 0
      border none
      &::after, &::before
        height 0
.categories
  width 100%
  display flex
  justify-content space-between
  padding 57px 0
  .category
    width 123px
    height 123px
    border-radius: 50%
    border solid 1px #999
    font-size: 20px
    color #999
    display flex
    justify-content center
    align-items center
    background-color #fff
    cursor pointer
    &.active, &:hover
      background-color #99CC00
      color #fff
.ribbon-2
  text-align center
  padding-top 40px
  background-color #f6f6f6
.case-groups
  margin-bottom 40px
  padding 15px 0
  width 100%
  border solid 1px #999
  display flex
  justify-content space-around
  align-items center
  .case-group
    cursor pointer
    height 42px
    line-height 42px
    text-align center
    padding 0 42px
    &.active,&:hover
      border-radius: 42px
      background-color $primary
      color #fff
.cases
  display flex
  flex-flow row wrap
  justify-content space-between
  .case
    width 264px
    height 264px
    border solid 1px #999
    padding 8px
    margin-bottom 18px

    img
      width 100%
      height 100%

.arrow
  padding 40px 0
